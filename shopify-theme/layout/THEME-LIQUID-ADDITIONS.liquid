{% comment %} Sticky Mobile CTA {% endcomment %}
<div class="cv-mobile-sticky-cta">
  <a href="/collections/all">Shop Now</a>
</div>

<style>
  .cv-mobile-sticky-cta {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 997;
    background: #2c332f;
    padding: 12px 16px;
    text-align: center;
  }
  .cv-mobile-sticky-cta a {
    display: block;
    background: #e8941f;
    color: #fff;
    padding: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.85rem;
    text-decoration: none;
    border-radius: 4px;
  }
  @media screen and (max-width: 749px) {
    .cv-mobile-sticky-cta { display: block; }
    body { padding-bottom: 70px; }
  }
</style>

