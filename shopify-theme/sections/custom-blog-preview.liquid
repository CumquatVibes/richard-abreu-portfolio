{% comment %}
  ============================================
  Blog Preview ("Design Stories") â€” Homepage Section
  Paste into: sections/custom-blog-preview.liquid
  Auto-pulls latest posts from selected blog
  ============================================
{% endcomment %}

<section class="blog-preview section-{{ section.id }}-padding" style="background: {{ section.settings.bg_color }};">
  <div class="page-width">
    <div class="blog-preview__header">
      <h2>{{ section.settings.heading | default: 'Design Stories' }}</h2>
      {% if section.settings.blog_url != blank %}
        <a href="{{ section.settings.blog_url }}" class="blog-preview__view-all">Read All &rarr;</a>
      {% endif %}
    </div>

    {% assign blog_handle = section.settings.blog | default: 'news' %}
    <div class="blog-preview__grid">
      {% for article in blogs[blog_handle].articles limit: section.settings.post_count %}
        <article class="blog-preview__card">
          <a href="{{ article.url }}">
            {% if article.image %}
              <div class="blog-preview__image">
                {{ article.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: article.title }}
              </div>
            {% endif %}
            <div class="blog-preview__content">
              <time class="blog-preview__date">{{ article.published_at | date: '%B %d, %Y' }}</time>
              <h3 class="blog-preview__title">{{ article.title }}</h3>
              <p class="blog-preview__excerpt">{{ article.excerpt_or_content | strip_html | truncatewords: 20 }}</p>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .blog-preview__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 28px;
    flex-wrap: wrap;
    gap: 12px;
  }
  .blog-preview__header h2 {
    font-family: var(--font-heading-family, 'Trirong', serif);
    font-size: 2rem;
    font-weight: 300;
  }
  .blog-preview__view-all {
    font-size: 0.85rem;
    opacity: 0.6;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.3s;
  }
  .blog-preview__view-all:hover { opacity: 1; }
  .blog-preview__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }
  .blog-preview__card a {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .blog-preview__image {
    aspect-ratio: 16/10;
    overflow: hidden;
    border-radius: 4px;
    margin-bottom: 14px;
  }
  .blog-preview__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  .blog-preview__card:hover img { transform: scale(1.03); }
  .blog-preview__date {
    font-size: 0.72rem;
    opacity: 0.45;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .blog-preview__title {
    font-family: var(--font-heading-family, 'Trirong', serif);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 6px 0 8px;
    line-height: 1.35;
  }
  .blog-preview__excerpt {
    font-size: 0.85rem;
    opacity: 0.6;
    line-height: 1.55;
  }
</style>

{% schema %}
{
  "name": "Blog Preview",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Design Stories"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "post_count",
      "label": "Posts to Show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
      "type": "url",
      "id": "blog_url",
      "label": "View All Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#222725"
    }
  ],
  "presets": [
    {
      "name": "Blog Preview"
    }
  ]
}
{% endschema %}
